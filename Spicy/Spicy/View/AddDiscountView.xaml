<UserControl x:Class="Spicy.View.AddDiscountView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Spicy.View"
             xmlns:vm="clr-namespace:Spicy.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="4.5*"></RowDefinition>
            <RowDefinition Height="0.85*"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Content="Tytuł promocji:" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
        <TextBox Text="Tytul" Grid.Column="1" Grid.ColumnSpan="3" VerticalAlignment="Center"></TextBox>

        <Label Content="Url promocji:" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
        <TextBox Text="Url link" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" VerticalAlignment="Center"></TextBox>

        <Label Content="Sklep:" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
        <ComboBox Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Width="150"></ComboBox>
        <Label Content="Kategoria:" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
        <ComboBox Grid.Row="2" Grid.Column="3" VerticalAlignment="Center" Width="150"></ComboBox>

        <!-- ADD HERE SENDING FILE -->
        <Label Content="Zdjęcie:" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
        <Label Content="sciezka pliku" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Center"></Label>
        <Button Content="Dodaj zdjęcie" Grid.Row="3" Grid.Column="3" Width="120" Height="30"></Button>

        <Label Content="Od kiedy" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
        <DatePicker Grid.Row="4" Grid.Column="1"  VerticalAlignment="Center"></DatePicker>
        <Label Content="Do kiedy" Grid.Row="4" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
        <DatePicker Grid.Row="4" Grid.Column="3" VerticalAlignment="Center"></DatePicker>

        <TextBox Grid.Row="5" Grid.ColumnSpan="4" Text="Tutaj opis"></TextBox>

        <Button Content="Dodaj" Grid.Row="6" Grid.Column="1" Width="120" Height="30"></Button>
        <Button Content="Anuluj" Grid.Row="6" Grid.Column="2" Width="120" Height="30"></Button>


    </Grid>
</UserControl>
