<UserControl x:Class="Spicy.View.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Spicy.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Control.Resources>
        <Style x:Key="NotRoundedPasswordBox" TargetType="PasswordBox">
            <Setter Property="FontSize" Value="14"></Setter>
            <Setter Property="Height" Value="28"></Setter>
            <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
            <Setter Property="Padding" Value="5 0 0 0"></Setter>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="BorderBrush" Value="Gray"></Setter>
                </Style>
            </Style.Resources>
        </Style>
    </Control.Resources>
    <PasswordBox x:Name="passwordBox" PasswordChanged="passwordBox_PasswordChanged" Style="{StaticResource NotRoundedPasswordBox}">
    </PasswordBox>
</UserControl>
